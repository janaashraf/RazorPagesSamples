@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<h2>Users</h2>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
            </tr>
        }
    </tbody>
</table>
<!-- Form to Add New User -->
<h3>Add New User</h3>
<form method="post" asp-page-handler="AddUser">
    <div class="form-group">
        <label asp-for="NewUserName">Name:</label>
        <input type="text" asp-for="NewUserName" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Add User</button>
</form>
